---
import Layout from '@layouts/Default.astro';
import RecentBlogPosts from '@components/generic/RecentBlogPosts.astro';
import MobileSocials from '@components/home/MobileSocials.astro';
import { Pill } from '@eliancodes/brutal-ui';
import { Button } from '@eliancodes/brutal-ui';
import { Card } from '@eliancodes/brutal-ui';
import EmailSignup from '@components/generic/EmailSignup.astro';

const builtWith = [
  { name: '10MinuteCMO', url: 'https://www.10minutecmo.com/' },
  { name: 'Owex Labs', url: 'https://owexlabs.com/' },
  { name: 'Lore Buildr', url: 'https://lorebuildr.com/' },
  {
    name: 'VSTDatabase',
    url: 'https://www.vstdatabase.com/',
  },
  { name: 'House Music', url: 'https://open.spotify.com/artist/0VczFIsniW6UT5LKSipiuj?si=eSiDsQdFSTO1p5eum8sNEw&nd=1' },
];
---

<Layout
  title='Home'
  pageTitle='billyjameshowell.com |Â Home'
  description='This website showcases what Billy is working on'.'
>
  <main class='bg-pink p-6'>
    <MobileSocials />
    <section id='about' class='grid md:grid-cols-8 gap-8 mt-4'>
      <h2 class='hidden'>About</h2>
      <div class='col-span-4'>
        <Card>
          <div class='flex flex-col justify-between items-start gap-4'>
            <p class='mt-4 outfit text-2xl md:text-5xl lg:text-7xl'>
              Hi, I'm <a
                class='text-white'
                target='_blank'
                href='https://astro.build/'>Billy</a
              >
            </p>
            <p class='mt-2 outfit text-xl md:text-3xl lg:text-5xl'>
              This is what I'm working on.
            </p>
            <Button target={'_self'} href='/blog/'>
              Check out the blog &rarr;
            </Button>
          </div>
        </Card>
      </div>
      <div class='col-span-2'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-8 dm-serif'>
            Projects
          </h2>
          <ul class='flex gap-4 flex-wrap'>
            {
              builtWith.map((item) => (
                <li>
                  <Pill>
                    <a
                      class='sanchez'
                      href={item.url}
                      target='_blank'
                      title={`Go to ${item.name}`}
                    >
                      {item.name}
                    </a>
                  </Pill>
                </li>
              ))
            }
          </ul>
        </Card>
      </div>
      
      <div class='col-span-2'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-4 dm-serif'>
            Get in touch
          </h2>
          <p class='poppins'>
            Email me at billy@owexlabs.com
          </p>
        </Card>
      </div>
      
<div class='col-span-4'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-4 dm-serif'>
            About Me
          </h2>
          <p class='poppins'>
            Billy Howell is your go-to specialist in growth marketing, SEO, and no-code development. 
            <br><br>He creates custom apps and automation flows using no-code tools, 
            allowing businesses to focus on their core operations without getting bogged down by software complexities.  
          </p>
        </Card>
      </div> 

      <div class='col-span-4'>
      <EmailSignup />
    </div>
    </section>
    
    <RecentBlogPosts />
  </main>
</Layout>
